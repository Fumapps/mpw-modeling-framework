context Hamster::initHamster(territory:Territory, location:Location, direction:Direction, grainCount:EInt)

/** check hamster is not already initialized */
precondition: 
    self.stage = null;

/** check hamster is not already initialized */
precondition: 
    location.column >= 0 && location.column < territory.width;

precondition: 
    grainCount > 0;

postcondition: 
    self.grains->size() = grainCount;